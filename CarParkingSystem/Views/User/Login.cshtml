@model LoginViewModel
    <div class="mask d-flex align-items-center h-100 gradient-custom-3 mt-5">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;border-color:orange">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Login</h2>

                            <form id="registerForm" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                               

                                <div class="form-outline mb-4">
                                    <label asp-for="@Model.Email">Email</label>
                                    <input id="form3Example3cg" class="form-control form-control-lg" autocomplete="username" aria-required="true" asp-for="@Model.Email" style="border-color:orange" />
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label asp-for="@Model.Password">Password</label>
                                    <input id="form3Example3cg" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" style="border-color:orange" />
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button id="registerSubmit" type="submit" class="btn btn-outline-success btn-block btn-lg gradient-custom-4 text-body">Log in</button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
